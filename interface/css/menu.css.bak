
/* navigating menu style settings */

#nav {
    padding:0 0 8px;
    margin: 0 0 15px;
    height: 20px;
}

#nav ul{
    margin: 0;
    padding: 0;
    list-style: none;
}

#nav li {
    display: inline;
    float:left;
    list-style:none;
}

#nav li a {
    display: block;
    color: #fff;
    padding: 8px 10px 5px 10px;
	font-family: Tahoma, Geneva, sans-serif;
	font-size: 1em;
    margin: 1;
    font-weight: bold;
    text-decoration: none;
	border-left: 1px solid #024d70;
	border-right: 1px solid #024d70;
}

#nav li a.active {
    color: #ccc;
    text-decoration: none;
}

#nav ul li{
    display: block;
    position: relative;
    float: left;
    margin: 0;
    padding: 0;
}

#nav li ul{
    display: none;
}

#nav ul li a{
    display: block;
    text-decoration: none;
    color: #fff;
    border: 1px solid #333333;
    white-space: nowrap;
    text-decoration: none;
    float: left; /*\*/ float:none;
    padding: 5px 20px 5px 5px;
}

#nav li:hover ul{
    display: block;
    position: absolute;
    font-weight:bold;
}

#nav li:hover li{
    float: none;
}

#nav ul li a span{
    font-weight: normal;
    color: #67707a;
}

#nav li:hover a{
    color:#fff;
	background:url(../images/btnbg.gif);
}

#nav li:hover li a:hover{
    color:#fff;
    background: #035b86;
}


